            <script>
            // Sidebar Upload -> /api/process -> show Summary
            (function(){
              const btn = document.getElementById('v3NavUploadBtn');
              const input = document.getElementById('v3NavFile');
              function switchView(id){
                document.querySelectorAll('.content-section').forEach(s=>s.classList.remove('active'));
                const t = document.getElementById(id); if (t) t.classList.add('active');
              }
              async function handle(files){
                if (!files || files.length===0) return;
                try{
                  const fd = new FormData();
                  Array.from(files).slice(0,5).forEach(f=>fd.append('files', f, f.name));
                  const res = await fetch('/api/process', { method:'POST', body: fd });
                  const data = await res.json();
                  if (!res.ok){ alert(data.error || 'Error processing files'); return; }
                  if (data.source_text){ try{ sessionStorage.setItem('omb_text', data.source_text); }catch(e){} try{ localStorage.setItem('omb_text', data.source_text); }catch(e){} }
                  const summaryContent = document.querySelector('#summary .summary-content');
                  if (summaryContent) summaryContent.innerHTML = '<div class="summary-box">' + (data.result || '[No response]') + '</div>';
                  const titleEl = document.querySelector('#summary .card-title');
                  if (titleEl) {
                    const t = (data.doc_title || '').toString();
                    titleEl.textContent = t ? t.replace(/\.[Pp][Dd][Ff]$/, '') : 'AI Summary';
                  }
                  const badge = document.querySelector('#summary .file-badge');
                  if (badge) badge.textContent = '📄 Generated from: ' + Array.from(files).map(f=>f.name).join(', ');
                  switchView('summary');
                }catch(err){
                  alert('Network error: ' + (err && err.message ? err.message : err));
                }finally{
                  if (input) input.value = '';
                }
              }
              if (btn && input){
                btn.addEventListener('click', ()=> input.click());
                input.addEventListener('change', ()=> handle(input.files));
              }
            })();
            </script>

